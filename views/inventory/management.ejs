

<h1><%= title %></h1>

<% if (errors) { %>
    <ul class="notice">
  <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
  <%  }) %>
    </ul>
  <% } %>

  <% if (message && message.length) { %>
  <div class="flash-message"><%= message %></div>
  <% } %>

<div class="inventory-links">
    <a href="/inv/addItem">Add New Inventory Item</a>
    <a href="/inv/addClassification">Add New Classification</a>
</div>

<h2>Manage Inventory</h2>

<p>Please select a classification from the list to see the items belonging to the classification.</p>

<select name="classification_id" id="classificationList" required>
  <% classificationSelectList.forEach(c => { %>
    <option value="<%= c.classification_id %>">
      <%= c.classification_name %>
    </option>
  <% }) %>
</select>


<table id="inventoryDisplay">
    
</table>

