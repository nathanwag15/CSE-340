<div class="container">

  <h1><%= title %></h1>

  <% if (message && message.length) { %>
    <div class="flash-message"><%= message %></div>
  <% } %>

  <% if (success && success.length) { %>
    <div class="flash-success"><%= success %></div>
  <% } %>

  <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <!-- Greeting based on login -->
  <h2>Welcome <%= accountData.account_firstname %></h2>

  <!-- ✅ Link available for ALL users -->
  <p>
    <a href="/account/update/<%= accountData.account_id %>" title="Update your account">
      Update Account Information
    </a>
  </p>

  <!-- ✅ Only show inventory tools for Employee/Admin -->
  <% if (accountData && (accountData.account_type === "Employee" || accountData.account_type === "Admin")) { %>
    <h3>Inventory Management</h3>
    <p><a href="/inv/">Manage Inventory</a></p>
  <% } %>




</div>
